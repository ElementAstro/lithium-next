    {
      "name": "cert_manager",
      "display_name": "证书管理器",
      "version": "1.0.0",
      "description": "SSL/TLS证书创建、管理和导出工具",
      "category": "security",
      "tags": ["certificate", "ssl", "tls", "security", "pkcs12"],
      "status": "stable",
      "platforms": ["windows", "linux", "macos"],
      "author": "Max Qian",
      "license": "GPL-3.0-or-later",
      "dependencies": ["cryptography", "loguru"],
      "icon": "certificate",
      "color": "#F44336",
      "order": 1,
      "capabilities": [
        "自签名证书创建",
        "PKCS#12格式导出",
        "多种加密算法支持",
        "SAN扩展支持"
      ],
      "endpoints": [
        {
          "path": "/api/cert/create",
          "method": "POST",
          "summary": "创建自签名证书",
          "description": "创建一个新的自签名SSL/TLS证书",
          "tags": ["certificate"],
          "parameters": [
            {"name": "hostname", "type": "string", "required": true, "description": "证书主机名"},
            {"name": "cert_dir", "type": "string", "required": true, "description": "证书存储目录"},
            {"name": "key_size", "type": "integer", "required": false, "default": 2048, "description": "RSA密钥大小"},
            {"name": "valid_days", "type": "integer", "required": false, "default": 365, "description": "有效期天数"}
          ]
        },
        {
          "path": "/api/cert/export-pkcs12",
          "method": "POST",
          "summary": "导出PKCS#12格式",
          "description": "将证书导出为PKCS#12格式",
          "tags": ["certificate"]
        }
      ],
      "commands": [
        {
          "command_id": "cert.create",
          "summary": "创建证书",
          "priority": 5,
          "timeout_ms": 30000
        }
      ],
      "examples": [
        {
          "title": "创建本地开发证书",
          "code": "POST /api/cert/create\n{\"hostname\": \"localhost\", \"cert_dir\": \"./certs\"}"
        }
      ]
    },
